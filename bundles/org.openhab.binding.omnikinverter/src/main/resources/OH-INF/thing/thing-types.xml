<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="omnikinverter"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="omnik">
		<label>OmnikInverter Binding Thing</label>
		<description>Thing for OmnikInverter Binding</description>

		<channels>
			<channel id="power" typeId="system.electric-power">
				<label>Instantaneous Power</label>
				<description>The instantaneous power generation for output 1</description>
			</channel>
			<channel id="powerAC1" typeId="system.electric-power">
				<label>Instantaneous Power AC1</label>
				<description>The instantaneous power generation for output 1</description>
			</channel>
			<channel id="powerAC2" typeId="system.electric-power">
				<label>Instantaneous Power AC2</label>
				<description>The instantaneous power generation for output 2</description>
			</channel>
			<channel id="powerAC3" typeId="system.electric-power">
				<label>Instantaneous Power AC3</label>
				<description>The instantaneous power generation for output 3</description>
			</channel>
			<channel id="voltageAC1" typeId="system.electric-voltage" advanced="true">
				<label>Voltage AC1</label>
				<description>The voltage for grid output 1</description>
			</channel>
			<channel id="voltageAC2" typeId="system.electric-voltage" advanced="true">
				<label>Voltage AC2</label>
				<description>The voltage for grid output 2</description>
			</channel>
			<channel id="voltageAC3" typeId="system.electric-voltage" advanced="true">
				<label>Voltage AC3</label>
				<description>The voltage for grid output 3</description>
			</channel>
			<channel id="currentAC1" typeId="system.electric-current" advanced="true">
				<label>Current AC1</label>
				<description>The current for grid output 1</description>
			</channel>
			<channel id="currentAC2" typeId="system.electric-current" advanced="true">
				<label>Current AC2</label>
				<description>The current for grid output 2</description>
			</channel>
			<channel id="currentAC3" typeId="system.electric-current" advanced="true">
				<label>Current AC3</label>
				<description>The current for grid output 3</description>
			</channel>
			<channel id="frequencyAC1" typeId="frequencyAC" advanced="true">
				<label>Frequency AC1</label>
				<description>The frequency for output 1</description>
			</channel>
			<channel id="frequencyAC2" typeId="frequencyAC" advanced="true">
				<label>Frequency AC2</label>
				<description>The frequency for output 2</description>
			</channel>
			<channel id="frequencyAC3" typeId="frequencyAC" advanced="true">
				<label>Frequency AC3</label>
				<description>The frequency for output 3</description>
			</channel>
			<channel id="currentPV1" typeId="system.electric-current">
				<label>Current PV1</label>
				<description>The current on input string 1</description>
			</channel>
			<channel id="currentPV2" typeId="system.electric-current">
				<label>Current PV2</label>
				<description>The current on input string 2</description>
			</channel>
			<channel id="currentPV3" typeId="system.electric-current">
				<label>Current PV3</label>
				<description>The current on input string 3</description>
			</channel>
			<channel id="voltagePV1" typeId="system.electric-voltage">
				<label>Voltage PV1</label>
				<description>The voltage on input string 1</description>
			</channel>
			<channel id="voltagePV2" typeId="system.electric-voltage">
				<label>Voltage PV2</label>
				<description>The voltage on input string 2</description>
			</channel>
			<channel id="voltagePV3" typeId="system.electric-voltage">
				<label>Voltage PV3</label>
				<description>The voltage on input string 3</description>
			</channel>
			<channel id="energyToday" typeId="system.electrical-energy">
				<label>Total Generated Energy</label>
				<description>The amount of generated energy in total</description>
			</channel>
			<channel id="energyTotal" typeId="system.electrical-energy">
				<label>Total Generated Energy</label>
				<description>The amount of generated energy in total</description>
			</channel>
			<channel id="temperature" typeId="temperature"/>
			<channel id="hoursTotal" typeId="hoursTotal"/>
		</channels>
		<config-description>
			<parameter name="hostname" type="text" required="true">
				<label>Hostname</label>
				<description>The hostname or IP of the Omnik Inverter</description>
				<context>network-address</context>
			</parameter>
			<parameter name="port" type="integer" required="true">
				<label>Port</label>
				<description>The TCP port of the Omnik inverter, usually 8899</description>
				<default>8899</default>
			</parameter>
			<parameter name="serial" type="integer" required="true">
				<label>Serial</label>
				<description>The serial of the Omnik inverter's Wifi module. This the number part only.</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="frequency">
		<item-type>Number:Frequency</item-type>
		<state readOnly="true" pattern="%.2f %unit%"/>
	</channel-type>

	<channel-type id="temperature">
		<item-type>Number:Temperature</item-type>
		<label>Current Temperature</label>
		<description>The temperature from the sensor</description>
		<category>Temperature</category>
		<tags>
			<tag>Measurement</tag>
			<tag>Temperature</tag>
		</tags>
		<state readOnly="true" pattern="%.f %unit%"/>
	</channel-type>
	<channel-type id="hoursTotal">
		<item-type>Number:Time</item-type>
		<label>Running hours</label>
		<description>The totale amount of running hours</description>
		<state readOnly="true" pattern="%.f %unit%"/>
	</channel-type>
</thing:thing-descriptions>
